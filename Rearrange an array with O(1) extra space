//User function Template for Java

class Solution
{
 
    // arr: input array
    // n: size of array
    //Function to rearrange an array so that arr[i] becomes arr[arr[i]]
    //with O(1) extra space.
    static void arrange(long arr[], int n)
    {
        // your code here
        
        long[] rearr = new long[n];
        
        for(int i=0;i<n;i++)
        {
            rearr[i] = arr[i];
            
        }
        
        for(int i=0;i<n;i++)
        {
            arr[i] = rearr[(int)rearr[i]];
        }
        
        












        
        
        
        
    }
}
