

class Solution{
    public int minStep(int n)
    {
        // code here
        
        int result = 0;

        while(n > 1)
        {
            if(n % 3 == 0)
            {
                result++;
                n /= 3;
            }
            else
            {
                n--;
                result++;
            }
        }

        return result;

        
        
        
        
        
        
        
    }
}
