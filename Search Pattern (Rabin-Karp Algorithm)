//User function Template for Java

class Solution
{
    
    ArrayList<Integer> search(String pattern, String text)
    {
        // your code here
        
        
        int i = 0;
        ArrayList<Integer> arr = new ArrayList<>() ;

        while(text.indexOf(pattern, i ) != -1)
        {

            i  = text.indexOf(pattern,i ) ;
            arr.add(i + 1);
            i++;

        }

        return arr;

        
        
        
        
        
        
        
    }
}
